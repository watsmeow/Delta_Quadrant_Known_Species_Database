<!-- Include header -->
	<%- include('include/_header') %>
<!-- /Include header -->

			<!-- Start your content here. -->

			<h1>Delta Quadrant:<br>Known Species Database</h1>

			<!-- Species information -->
			<div class="lcars-text-bar the-end">
				<span id="species-name"><%= species[0].name %></span>
			</div>

			<% let speciesPicture = 'data:' + species[0].image.contentType + ';base64,' + species[0].image.imageBase64 %>

			<div class="lcars-text-bar">
				<span>Species Image</span>
			</div>
			<img src="<%= speciesPicture %>" alt="species-image" id="species-image">

			<div class="lcars-text-bar">
				<span>Homeworld:</span>			
			</div>
			<p id="homeworld"><%= species[0].homeworld %></p>

			<div class="lcars-text-bar">
				<span>Biology:</span>
			</div>
			<p id="biology"><%= species[0].biology %></p>

			<div class="lcars-text-bar">
				<span>Culture:</span>
			</div>
			<p id="culture"><%= species[0].culture %></p>

			<div class="lcars-text-bar">
				<span>Technology:</span>
			</div>
			<p id="technology"><%= species[0].technology %></p>

			<!-- Include episodes -->
				<%- include('include/_encounters') %>
			<!-- /Include epidoseds -->
			
			 <!-- End content area. -->

<!-- Include footer -->
	<%- include('include/_footer') %>
